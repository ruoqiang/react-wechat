@import "~common/styl/variable"
@import "~common/styl/mixin"
#select-car
  position:fixed
  left:0
  right:0
  top:0
  bottom:0
  background:$color-background-dd
  text-align:left
  .select-car-title
    line-height:40px
    height:40px
    font-size:13px
    padding-left:14px
    color:$color-text
    position:relative
    z-index:1
.form-box
  background:#fff
  border-1px(#dddddd)
  border-top-1px(#dddddd)
  z-index:0
  .car-list
    height:70px
    border-1px(#dddddd)
    margin-left:14px
    position:relative
    display:flex
    color:$color-text
    .car-img
      width:68px
      height:68px
      margin-right:20px
      overflow:hidden
      padding:1px 0
      img
        width:100%
        height:100%
    .car-number
      height:70px
      line-height:70px
    &:after
        display: block
        position: absolute
        left: 0
        bottom: 0
        border-top: 1px solid #ddd
        content: " "
        width: 100%;
.car-list .icon-more
  position:absolute
  right: 20px
  top:24px
  width:20px
  height:20px
  font-size:22px
  color:$color-text
.tips-status-box
  position:absolute
  left: 0
  top:0
  width: 100%
  height:100%
  background:#fff
  z-index: 2
  // display:none
  .ptc
    margin-top:30%
    position:relative
.loading-box
  position:absolute
  left: 0
  top:0
  width: 100%
  height:100%
  background:#fff
  z-index: 2
  .loading 
    margin-top: 20%