@import "~common/styl/variable"
@import "~common/styl/mixin"
$color-background = #fff
$color-text-l = #999
#record-car
  position:fixed
  left:0
  right:0
  top:0
  bottom:0
  background:$color-background-dd
  text-align:left
  .record-img
    height:0px
    // font-size:0px
    padding-bottom:87.9%
    background:url('./record01.jpg') no-repeat
    background-size:100%
    position:relative
    overflow:hidden
    @media only screen and (min-width: 360px)
      padding-bottom:79.9%
    @media only screen and (min-width: 410px)
      padding-bottom:75.9%
    .record-time-span
      width:94.2%
      height:165px
      position:absolute
      left:50%
      bottom:0
      background:#fff
      border:1px solid #dddddd
      transform: translate3d(-50%,0,0);
      border-radius:5px 5px 0 0
      .span-title
        line-height:42px
        height:42px
        padding-left:15px
        color:$color-text
        font-size:13px
      .time-span
        width:306px
        margin:0 auto
        line-height:42px
        height:42px
        display:flex
        justify-content: space-between;
        span
          font-size:13px
          color:$color-text
          display:inline-block
          &.time
            font-size:15px
            width:129px
            border-1px(#dddddd)
            text-align:center
      .btn
        margin-top:25px

.icon-top
  position:fixed
  right: 20px
  bottom:20px
  width:40px
  height:40px
  font-size:28px
  color:$color-text
  background:url('../../common/image/back.png')
  background-size: 100%
  border-radius:50%
  border:1px solid $color-text-ll
  &:before
    position:absolute
    top: 7px
    left:6px
.record-list-box-wrap
  position:relative
  .ajaxLoaing
    position:absolute
    left:0
    top:0
    width:100%
    background:#f5f5f5
    padding-top:30px
    height:100%
.mask
  position:absolute
  left:0
  top:0
  width:100%
  height:100%

#record-list
  height:100%
.record-list-box
  // border-1px(#dddddd)
  background:#f5f5f5
//   margin-top:15px
  .record-list
    border-1px(#dddddd)
    border-top-1px(#dddddd)
    background:$color-background
    position:relative
    color:$color-text
    margin-bottom:10px
    .record-list-title
      margin-left:14px
      line-height:38px
      height:38px
      margin-right:20px
      overflow:hidden
      padding:1px 0
      display:flex
      justify-content: space-between;
      div
        font-size:14px
        color:$color-text
        &.cost
          color:$color-theme
    .record-list-info
      border-top-1px(#dddddd)
      margin-left:14px
      padding:7px 16px 7px 0
      .in-out-list
        height:22px
        line-height:22px
        display:flex
        justify-content: space-between;
        .go-site
          font-size:13px
          color:$color-text-l
          span
            color:#090909
        .go-time
          font-size:13px
          color:#999
  .tipsStatusBox1
    position:relative
    padding-top:65px
    // display:none
    width:100%
.seeMore
  height:40px
  line-height:40px
  position:relative
  width:100%
  span
    font-size:14px
    color:#333
    position:relative
